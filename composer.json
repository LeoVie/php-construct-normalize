{
    "name": "leovie/php-construct-normalize",
    "description": "Normalize php language constructs.",
    "license": "BSD-3-Clause",
    "type": "symfony-bundle",
    "autoload": {
        "psr-4": {
            "LeoVie\\PhpConstructNormalize\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LeoVie\\PhpConstructNormalize\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Leo Viezens",
            "email": "leo.viezens@web.de"
        }
    ],
    "require": {
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/http-kernel": "^6.0",
        "thecodingmachine/safe": "^2.1",
        "nikic/php-parser": "^4.13",
        "rector/rector": "^0.15.13"
    },
    "require-dev": {
        "infection/infection": "^0.26",
        "psalm/plugin-symfony": "^3.0",
        "symfony/phpunit-bridge": "^6.0",
        "vimeo/psalm": "^4.18",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "psalm": "psalm -c build/config/psalm.xml --show-info=true",
        "phpunit": "simple-phpunit -c build/config/phpunit.xml",
        "infection": "infection --only-covered --configuration=build/config/infection.json --min-msi=87 --min-covered-msi=87 --coverage=../coverage --threads=4 --test-framework-options='--no-coverage'",
        "infection-after-phpunit": "@infection --skip-initial-tests",
        "test": [
            "@psalm",
            "@phpunit"
        ],
        "testall": [
            "@test",
            "@infection-after-phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
